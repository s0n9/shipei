        <TextView android:textSize="@dimen/textsize_buy_label" android:textColor="@color/C5" android:id="@id/label_login_question" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/login_margin_top_big_size" android:layout_marginRight="@dimen/login_margin_small_size" android:text="@string/label_contact_custom_service_hint" android:singleLine="true" android:layout_toLeftOf="@id/label_contact_custom_service" android:layout_below="@id/btn_login" android:layout_marginEnd="@dimen/login_margin_small_size" android:layout_toStartOf="@id/label_contact_custom_service" />
        <TextView android:textSize="@dimen/textsize_buy_label" android:textColor="@color/C1" android:id="@id/label_buy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/login_margin_size" android:layout_marginTop="@dimen/login_margin_top_big_size" android:text="@string/label_buy_smart" android:layout_toLeftOf="@id/label_login_question" android:layout_below="@id/btn_login" android:layout_alignParentLeft="true" android:layout_marginStart="@dimen/login_margin_size" android:layout_alignParentStart="true" />
    </RelativeLayout>
</LinearLayout>