        <Button android:textSize="@dimen/font_size_A2" android:textColor="@color/white" android:gravity="center" android:id="@id/btn_login" android:background="@drawable/btn_login" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/login_margin_size" android:layout_marginTop="@dimen/login_margin_top_size" android:layout_marginRight="@dimen/login_margin_size" android:text="@string/login" android:layout_below="@id/login_input_part" />
